<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgStu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textView3"
            android:hint="name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#050505" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtName"
            android:layout_below="@+id/txtName"
            android:layout_marginTop="7dp"
            android:hint="phone no."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#050505" />

        <ImageView
            android:id="@+id/imgVideo"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/txtName"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/txtPhone"
            app:srcCompat="@drawable/ic_video_library_black_24dp" />

        <ImageView
            android:id="@+id/imgCall"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/txtPhone"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/txtPhone"
            app:srcCompat="@drawable/ic_phone" />


        <ImageView
            android:id="@+id/imgLoc"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/txtAddress"
            android:layout_alignStart="@+id/imgCall"
            android:layout_toEndOf="@+id/txtAddress"
            app:srcCompat="@drawable/ic_my_location_black_24dp" />


        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignStart="@+id/txtPhone"
            android:hint="address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#050505" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgStu"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imgStu"
            android:text="Name - "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#050505" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="7dp"
            android:text="Phone - "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#050505" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="7dp"
            android:text="Address - "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#050505" />

        <TextView
            android:id="@+id/txtPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.v7.widget.CardView>